<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/bookingroom"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="32dp"
        android:background="#006DD5"
        android:text="Book a room"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/cancelbooking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cancelbooking"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="32dp"
        android:background="#006DD5"
        android:text="Cancel booking"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/changebooking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/changebooking"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="32dp"
        android:background="#006DD5"
        android:text="Change a booking"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="32dp"
        android:background="#006DD5"
        android:text="View your profile"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="163dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/nhslogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nhslogo" />

</androidx.constraintlayout.widget.ConstraintLayout>